FROM agent-cubicle-copilot-base:latest

USER root

RUN npm install -g @github/copilot

COPY bin/entry-copilot.sh /entry.sh
RUN chmod +x /entry.sh && chown copilot:copilot /entry.sh
RUN chown copilot:copilot /home/copilot

USER copilot

RUN mkdir -p /workspace
WORKDIR /workspace
RUN chown -R copilot:copilot /workspace

CMD ["/entry.sh"]