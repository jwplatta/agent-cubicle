FROM agent-cubicle-gemini-base:latest

USER root

# Install Python 3.x (latest available from Debian Bullseye repos)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Copy entry scripts
COPY bin/entry-base.sh /entry-base.sh
COPY bin/entry-gemini.sh /entry.sh
RUN chmod +x /entry.sh /entry-base.sh && chown gemini:gemini /entry.sh /entry-base.sh

USER gemini

# Install uv (modern Python package manager) as gemini user
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Make uv available in user PATH
ENV PATH="/home/gemini/.cargo/bin:/home/gemini/.local/bin:${PATH}"

CMD ["/entry.sh", "python"]
