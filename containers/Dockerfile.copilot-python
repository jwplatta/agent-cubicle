FROM agent-cubicle-copilot-base:latest

USER root

# Install Python 3.x (latest available from Debian Bookworm repos)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Copy entry script
COPY bin/entry-copilot.sh /entry.sh
RUN chmod +x /entry.sh && chown copilot:copilot /entry.sh

USER copilot

# Install uv (modern Python package manager) as copilot user
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Make uv available in user PATH
ENV PATH="/home/copilot/.cargo/bin:/home/copilot/.local/bin:${PATH}"

CMD ["/entry.sh", "python"]
