FROM agent-cubicle-codex-base:latest

USER root

# Install Python 3.x (latest available from Debian Bullseye repos)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/* \
    && ln -sf /usr/bin/python3 /usr/bin/python

# Copy entry script
COPY bin/entry-codex.sh /entry.sh
RUN chmod +x /entry.sh && chown codex:codex /entry.sh

USER codex

# Install uv (modern Python package manager) as codex user
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Make uv available in user PATH
ENV PATH="/home/codex/.cargo/bin:/home/codex/.local/bin:${PATH}"

CMD ["/entry.sh", "python"]
