FROM node:20-bullseye

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    vim \
    build-essential \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user (remove default node user first)
# Using UID 502 and GID 20 to match host macOS user for volume mount permissions
RUN userdel -r node 2>/dev/null || true && \
    groupadd -g 20 claude 2>/dev/null || groupmod -n claude $(getent group 20 | cut -d: -f1) && \
    useradd -u 502 -g 20 -m -s /bin/bash claude && \
    mkdir -p /home/claude/.claude /home/claude/.config /home/claude/.ssh && \
    chown -R claude:claude /home/claude

RUN npm install -g @anthropic-ai/claude-code

# Install obsidian-mcp globally (builds from the mounted source)
# We'll actually install this at runtime since we need the mounted code

COPY bin/entry-claude.sh /entry.sh
RUN chmod +x /entry.sh && chown claude:claude /entry.sh

USER claude

CMD ["/entry.sh"]