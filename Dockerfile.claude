FROM node:20-bullseye

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    vim \
    build-essential \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

RUN npm install -g @anthropic-ai/claude-code

# Install obsidian-mcp globally (builds from the mounted source)
# We'll actually install this at runtime since we need the mounted code

COPY bin/entry-claude.sh /entry.sh
RUN chmod +x /entry.sh

CMD ["/entry.sh"]