FROM node:20-bullseye

RUN apt-get update && apt-get install -y \
    git \
    curl \
    vim \
    build-essential \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

RUN npm install -g @openai/codex@0.80.0

COPY bin/entry-codex.sh /entry.sh
RUN chmod +x /entry.sh

CMD ["/entry.sh"]
