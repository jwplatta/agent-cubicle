FROM agent-cubicle-copilot-base:latest

USER root

# Install Ruby (latest available from Debian Bookworm repos)
RUN apt-get update && apt-get install -y \
    ruby \
    ruby-dev \
    && rm -rf /var/lib/apt/lists/*

# Install bundler
RUN gem install bundler

# Copy entry script
COPY bin/entry-ruby.sh /entry.sh
RUN chmod +x /entry.sh && chown copilot:copilot /entry.sh

USER copilot

CMD ["/entry.sh"]
